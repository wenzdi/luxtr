<?php $post = $this->getPost() ?>
<?php if ($post): ?>
<p class="post-meta details">
<?php if ($this->hasTags($post)): ?>
	<?php echo stripslashes($this->__('This entry was posted in %s and tagged %s on %s<span class=\"by-author\"> by %s</span>.', $this->getCategoryString($post), $this->getTagString($post), $post->getPostDate(), $post->getAuthor()->getDisplayName())) ?>
<?php else: ?>
	<?php echo stripslashes($this->__('<span class=\"by-author\"> by %s</span> on <span class=\"by-date\">%s</span>.',  $post->getAuthor()->getDisplayName(), $post->getPostDate() )) ?>
<?php endif; ?>
    &middot;<a class="leavecomment" href="<?php echo $post->getPermalink() ?>" title="Leave a comment">Leave a comment</a>
<?php if ($this->canDisplayPreviousNextLinks()): ?>
<span class="post-skips">
	<?php if (($previous = $post->getPreviousPost()) !== false): ?>
		<a href="<?php echo $previous->getPermalink() ?>" class="post-skip post-skip-previous" title="<?php echo $this->escapeHtml($previous->getPostTitle()) ?>">&larr; <?php echo $this->__('Previous Post') ?></a>
	<?php endif; ?>
	<?php if (($next = $post->getNextPost()) !== false): ?>
		<a href="<?php echo $next->getPermalink() ?>" class="post-skip post-skip-next right" title="<?php echo $this->escapeHtml($next->getPostTitle()) ?>"><?php echo $this->__('Next Post') ?> &rarr;</a>
	<?php endif; ?>
</span>
<?php endif; ?>
</p>
<?php endif; ?>